<%= form_for(@blog, url: choose_new_or_edit) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog.errors.count %>エラーがあります。</h2>

      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :なにしている %>
  <%= f.text_field :content, class: 'form_control' %>
  <br>
  <%= f.submit '送信', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "一覧画面に戻る", blogs_path %>