<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
  <p><%= notice %></p>
    <h1>一覧</h1>
      <%= link_to "つぶやく", new_blog_path, class: 'btn btn-default' %>
    <% @blogs.each do |blog| %>
    <div class="row">
      <p>本文:<%= blog.content %></p>
      <%= link_to "編集する", edit_blog_path(blog.id), class: 'btn btn-default btn-sm btn-success' %>
      <%= link_to "削除する", blog_path(blog.id), method: :delete, data: { confirm: '削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
    </div>
    <% end %>
  </div>
</div>

<%= link_to "つぶやく", new_blog_path %>