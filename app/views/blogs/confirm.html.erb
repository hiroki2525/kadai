<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h3>これで大丈夫？</h3>
    <%= form_for(@blog) do |f| %>
      <%= f.hidden_field :content %>
      <p>本文:<%= @blog.content %></p>
      <%= f.submit "OK!!!",class: 'btn btn-primary btn-block' %>
    <% end %>
    <%= form_for(@blog, url: new_blog_path, method: 'get') do |f| %>
      <%= f.hidden_field :content %>
      <%= f.submit "もどる",  name: 'back', class: 'btn btn-default btn-block' %>
    <% end %>
  </div>
</div>